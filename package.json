{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-admin"
    },
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream",
        "start": "pm2 start ecosystem.config.js",
        "storybook": "npm run --prefix packages/admin-stories storybook",
        "lint": "npm run lint:eslint && npm run lint:tsc",
        "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx,.json,.md packages/**/src/",
        "prelint:tsc": "npm run build",
        "lint:tsc": "lerna run lint:tsc --stream",
        "prebuild:storybook": "npm run build",
        "build:storybook": "npm --prefix packages/admin-stories run build-storybook",
        "intl:extract": "formatjs extract ./packages/**/*.ts* --out-file lang/en.json --ignore ./**.d.ts --ignore ./packages/admin-stories/**/* --format simple",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@formatjs/cli": "^2.13.12",
        "@types/uuid": "^8.3.0",
        "@storybook/addon-docs": "^6.2.7",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-formatjs": "^3.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "exceljs": "^3.4.0",
        "file-saver": "^2.0.2",
        "final-form": "^4.16.1",
        "graphql": "^15.4.0",
        "history": "^4.10.1",
        "husky": "^6.0.0",
        "jss": "^9.8.7",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "pm2": "^4.5.6",
        "prettier": "^2.1.2",
        "react": "^17.0",
        "react-dom": "^17.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.2.2",
        "wait-on": "^5.3.0"
    },
    "engines": {
        "node": "14",
        "npm": "7"
    }
}
